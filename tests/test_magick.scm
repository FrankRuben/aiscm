(use-modules (aiscm magick)
             (aiscm element)
             (aiscm pointer)
             (aiscm sequence)
             (aiscm image)
             (aiscm rgb)
             (guile-tap))
(planned-tests 7)
(define ramp (read-image "fixtures/ramp.png"))
(define index (read-image "fixtures/index.png"))
(ok (equal? '(6 4) (shape ramp))
    "Check size of loaded image")
(diagnostics "following test only works with recent version of libswscale")
(skip (equal? (rgb 2 1 128) (get (to-array ramp) 2 1))
    "Check pixel of loaded RGB image")
(ok (throws? (read-image "fixtures/nonexistent.png"))
    "Throw exception if file not found")
(ok (equal? 18 (get (to-array index) 2 1))
    "Check pixel of loaded greyscale image")
(define grey-file-name (format #f "~a.png" (tmpnam)))
(define lst '((1 2 3) (4 5 6)))
(define img (to-image (to-array lst)))
(define retval (write-image img grey-file-name))
(ok (eq? retval img)
    "Writing image should return input image")
(define grey (read-image grey-file-name))
(ok (equal? '((1 2 3) (4 5 6)) (to-list (to-array grey)))
    "Check content of saved image")
(ok (throws? (write-image img "fixtures/nosuchdir/tmp.png"))
    "Should handle errors when writing image")
